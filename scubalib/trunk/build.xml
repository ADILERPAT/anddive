<?xml version="1.0" encoding="utf-8"?>
<project name="ScubaLib" basedir="." default="jar">

	<property name="src.dir" value="src"/>
	<property name="lib.dir" value="libs"/>
	<property name="out.dir" value="bin"/>
	<property name="classes.dir" value="classes"/>

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>

	<target name="clean" description="Delete all generated files">
		<delete dir="${out.dir}" failonerror="false"/>
	</target>

	<target name="compile" description="Compiles the Task">
		<mkdir dir="${out.dir}"/>
		<mkdir dir="${out.dir}/${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${out.dir}/${classes.dir}" classpathref="classpath"/>
	</target>

	<target name="jar" description="JARs the Task" depends="compile">
		<jar destfile="${out.dir}/${ant.project.name}.jar" basedir="${out.dir}/${classes.dir}"/>
	</target>

</project>
